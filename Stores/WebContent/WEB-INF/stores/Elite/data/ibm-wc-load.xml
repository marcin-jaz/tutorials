			<param name="MAR_STORE_IDENTIFIER" value="${asset:foreignKeys#STORE_IDENTIFIER}" />
			<param name="MAR_ORGANIZATION_DN" value="ou=${asset:foreignKeys#STORE_IDENTIFIER_LOWERCASE},${asset:foreignKeys#ORGANIZATION_DN}" />
