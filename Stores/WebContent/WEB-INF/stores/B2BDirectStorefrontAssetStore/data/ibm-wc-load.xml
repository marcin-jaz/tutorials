      	<param name="storeIdentifier" value="${asset:foreignKeys#STORE_IDENTIFIER_BMP}" />
      	<param name="organizationDN" value="${asset:foreignKeys#ORG_DN_PROFILE_PART}${asset:foreignKeys#ORGANIZATION_DN}" />
   		</task>
