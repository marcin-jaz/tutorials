<Definitions>
	<!---
		This search is used to find {@link DynamicSalesCatalogGroup} and {@link InheritedDynamicSalesCatalogGroup}.
		The search retrieves objects that match the search term passed in.
		The required search parameters are
			<ul>
			<li>searchText
			</ul>		
		The search term text is compared with the values of the following dynamic sales catalog group properties:
			<ul>
			<li>code
			<li>name
			</ul>
	-->
	<SearchDefinition definitionName="FindDynamicSalesCategories"
		searchType="FindDynamicSalesCategories"
		displayName="${catalogResources.findRuleBasedSalesCategoriesSearchDefinition_DisplayName}"
		objectTypeDisplayName="${catalogResources.ruleBasedSalesCategory_DisplayName}"
		icon="ruleBasedSalesCatalogGroupIcon"
		listDefinitionName="catSalesCategorySearchGrid"
		listTitle="${catalogResources.ruleBasedSalesCategorySearchTitle}"
		utilitiesListDefinitionName="catCategoryUtilitiesSearchGrid"		
		tooltip="${catalogResources.searchRuleBasedSalesCategoriesTooltip}"
		helpLink="tasks/tpn_toprulesalescategories.htm">
		
		<SearchService name="findDynamicSalesCategories" url="/cmc/FindAllDynamicSalesCategories">
			<ServiceParam name="storeId"/>
		</SearchService>
	</SearchDefinition>
</Definitions>