<Definitions>

	<WidgetObjectDefinition package="plm"
		definitionName="plmLayoutWidget_CategoryRecommendationWidget" 
		baseDefinitionName="plmBaseLayoutWidget"
		parentDefinitionName="plmBasePageLayoutPrimaryObjectDefinition"
		objectType="CategoryRecommendationWidget"
		gridPropertiesDefinitionName="plmWidgetProperties_CategoryRecommendationWidget"
		iconPath="/images/pagelayouts/widgetIcons/category_recommend.png"
		widgetDisplayGroups="AnyPage,CatalogEntryPage,CategoryPage,SearchPage"
		helpLink="concepts/cpzwidcatrec.htm">

		<PropertyDefinition propertyName="xWidgetProp_widgetOrientation">
			<PropertyValue displayName="${plmPageLayoutResources.categoryRecommendationWidgetWidgetOrientation_Horizontal}" value="horizontal" />
			<PropertyValue displayName="${plmPageLayoutResources.categoryRecommendationWidgetWidgetOrientation_Vertical}" value="vertical" />
		</PropertyDefinition>
		
		<PropertyDefinition propertyName="xWidgetProp_displayPreference">
			<PropertyValue displayName="${plmPageLayoutResources.categoryRecommendationWidgetDisplayPreference_Style1}" value="1" />
			<PropertyValue displayName="${plmPageLayoutResources.categoryRecommendationWidgetDisplayPreference_Style2}" value="2" />
			<PropertyValue displayName="${plmPageLayoutResources.categoryRecommendationWidgetDisplayPreference_Style3}" value="3" />
		</PropertyDefinition>
		
		<PropertyDefinition propertyName="xWidgetProp_pageSize" 
			displayName="${plmPageLayoutResources.categoryRecommendationWidgetMaxCategoriesToDisplay}" 
			maxValue="2147483647" 
			minValue="1"
			type="integer">
		</PropertyDefinition>

		<PropertyDefinition propertyName="xWidgetProp_emsName" copyProtected="true">
		</PropertyDefinition>
		
		<PropertyDefinition propertyName="xWidgetProp_emsId" copyProtected="true">
		</PropertyDefinition>
		
		<PropertyDefinition propertyName="xWidgetProp_emsIdOverride" copyProtected="true">
		</PropertyDefinition>

		<PropertyDefinition propertyName="xWidgetProp_populationChoice">
			<PropertyValue displayName="${plmPageLayoutResources.categoryRecommendationWidgetRecommendCategories}" value="useCategory" isDefault="true"/>
			<PropertyValue displayName="${plmPageLayoutResources.categoryRecommendationWidgetRecommendWebActivity}" value="useWebactivity" />
		</PropertyDefinition>
		
		<CreateService baseDefinitionName="plmBaseCreateLayoutWidget" />
		<UpdateService baseDefinitionName="plmBaseUpdateLayoutWidget" />

		<ChildObjectDefinition baseDefinitionName="plmWidgetDisplayTitle"/>
		<ChildObjectDefinition baseDefinitionName="plmInheritedWidgetDisplayTitle"/>
	
		<ReferenceObjectDefinition 
		 	baseDefinitionName="plmBaseDefaultMarketingContentReference" 
		 	objectType="DefaultEMarketingSpotCatalogGroupContentReference" 
			referencedTypes="CatalogGroup,SalesCatalogGroup,DynamicSalesCatalogGroup">
		 	<TrueEnablementCondition/>
		</ReferenceObjectDefinition>
		
		<ReferenceObjectDefinition 
		 	baseDefinitionName="plmBaseDefaultMarketingContentReference" 
		 	objectType="InheritedDefaultEMarketingSpotCatalogGroupContentReference" 
		 	referencedTypes="InheritedCatalogGroup,InheritedSalesCatalogGroup,InheritedDynamicSalesCatalogGroup">
		 	<TrueEnablementCondition/> 		 			 	
		</ReferenceObjectDefinition>
		
		<ReferenceObjectDefinition 
		 	baseDefinitionName="plmBaseDefaultMarketingContentReference" 
		 	objectType="InheritedDefaultEMarketingSpotInheritedCatalogGroupContentReference" 
		 	referencedTypes="InheritedCatalogGroup,InheritedSalesCatalogGroup"
		 	allowedParentTypes="InheritedPageLayout"
		 	objectGroups="DefaultMarketingContentReferenceGroup,AssetStoreObjectsGroup">
		 	<EnablementCondition checkHasAccessRight="true" conditionId="accessRightCondition" enablementValue="true"/>		 	
		</ReferenceObjectDefinition>

		<ReferenceObjectDefinition baseDefinitionName="plmActivityReference"/>
		
		<ReferenceObjectDefinition baseDefinitionName="plmInheritedActivityReference"/>
		
		<ReferenceObjectDefinition baseDefinitionName="plmInheritedActivityInheritedReference"/>
		
		<Xml name="template">
			<xWidgetProp_widgetOrientation>horizontal</xWidgetProp_widgetOrientation>
			<xWidgetProp_pageSize>4</xWidgetProp_pageSize>
			<xWidgetProp_showFeed>false</xWidgetProp_showFeed>
			<sequence>0</sequence>
			<xWidgetProp_populationChoice>useCategory</xWidgetProp_populationChoice>
			<xWidgetProp_displayPreference>1</xWidgetProp_displayPreference>			
		</Xml>
		
		<MarketingWidgetValidator package="plm" />
		<MarketingWidgetInheritedObjectValidator package="plm" />
		
	</WidgetObjectDefinition>

</Definitions>
