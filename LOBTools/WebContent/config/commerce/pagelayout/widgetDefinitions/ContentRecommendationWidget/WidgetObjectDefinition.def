<Definitions>

	<WidgetObjectDefinition package="plm" definitionName="plmLayoutWidget_ContentRecommendationWidget"
		baseDefinitionName="plmBaseLayoutWidget"
		parentDefinitionName="plmBasePageLayoutPrimaryObjectDefinition"
		objectType="ContentRecommendationWidget"
		gridPropertiesDefinitionName="plmWidgetProperties_ContentRecommendationWidget"
		iconPath="/images/pagelayouts/widgetIcons/content_recommend.png"
		widgetDisplayGroups="AnyPage,CatalogEntryPage,CategoryPage,SearchPage"
		helpLink="concepts/cpzwidconrec.htm">
		
		<PropertyDefinition propertyName="xWidgetProp_widgetOrientation">
			<PropertyValue displayName="${plmPageLayoutResources.contentRecommendationWidgetWidgetOrientation_Horizontal}" value="horizontal" />
			<PropertyValue displayName="${plmPageLayoutResources.contentRecommendationWidgetWidgetOrientation_Vertical}" value="vertical" />
		</PropertyDefinition>
		
		<PropertyDefinition propertyName="xWidgetProp_displayPreference">
			<PropertyValue displayName="${plmPageLayoutResources.contentRecommendationWidgetDisplayPreference_Style1}" value="1" />
			<PropertyValue displayName="${plmPageLayoutResources.contentRecommendationWidgetDisplayPreference_Style2}" value="2" />
			<PropertyValue displayName="${plmPageLayoutResources.contentRecommendationWidgetDisplayPreference_Style3}" value="3" />
		</PropertyDefinition>
		
		<PropertyDefinition propertyName="xWidgetProp_emsName" copyProtected="true">
		</PropertyDefinition>
		
		<PropertyDefinition propertyName="xWidgetProp_emsId" copyProtected="true">
		</PropertyDefinition>
		
		<PropertyDefinition propertyName="xWidgetProp_emsIdOverride" copyProtected="true">
		</PropertyDefinition>
		
		<PropertyDefinition propertyName="xWidgetProp_pageSize" 
			displayName="${plmPageLayoutResources.contentRecommendationWidgetMaxContentToDisplay}" 
			maxValue="2147483647" 
			minValue="1"
			type="integer">
		</PropertyDefinition>
		
		<PropertyDefinition propertyName="xWidgetProp_populationChoice">
			<PropertyValue displayName="${plmPageLayoutResources.chooseDefaultContent}" value="useDefaultContent" isDefault="true"/>
			<PropertyValue displayName="${plmPageLayoutResources.chooseWebActivity}" value="useWebactivity" />
		</PropertyDefinition>
		
		<CreateService baseDefinitionName="plmBaseCreateLayoutWidget" />
		<UpdateService baseDefinitionName="plmBaseUpdateLayoutWidget" />

		<ChildObjectDefinition baseDefinitionName="plmWidgetDisplayTitle"/>
		<ChildObjectDefinition baseDefinitionName="plmInheritedWidgetDisplayTitle"/>
	
		<ReferenceObjectDefinition baseDefinitionName="plmDefaultEMarketingSpotMarketingContentReference"/>
		
		<ReferenceObjectDefinition baseDefinitionName="plmInheritedDefaultEMarketingSpotInheritedMarketingContentReference"/>
		
		<ReferenceObjectDefinition baseDefinitionName="plmInheritedDefaultEMarketingSpotMarketingContentReference"/>
		
		<ReferenceObjectDefinition baseDefinitionName="plmActivityReference"/>
		
		<ReferenceObjectDefinition baseDefinitionName="plmInheritedActivityReference"/>
		
		<ReferenceObjectDefinition baseDefinitionName="plmInheritedActivityInheritedReference"/>
		
		<Xml name="template">
			<xWidgetProp_widgetOrientation>horizontal</xWidgetProp_widgetOrientation>
			<xWidgetProp_pageSize>4</xWidgetProp_pageSize>
			<xWidgetProp_showFeed>false</xWidgetProp_showFeed>
			<xWidgetProp_displayPreference>1</xWidgetProp_displayPreference>
			<sequence>0</sequence>
			<xWidgetProp_populationChoice>useDefaultContent</xWidgetProp_populationChoice>
		</Xml>

		<MarketingWidgetValidator package="plm" />
		<MarketingWidgetInheritedObjectValidator package="plm" />
		
	</WidgetObjectDefinition>
	
</Definitions>
