	<!--
            Defines the properties page for Layout folders.
            This properties page shows the folder identifier, description,etc.
       -->
<Definitions>
      <ObjectProperties definitionName="plmLayoutFolderProperties">
            <PropertyPane name="LayoutFolderPane">
                  <PropertyGroup baseDefinitionName="wcfPropertyAssetInformationGroup" name="assetGroup"/>
                  <PropertyGroup groupTitle="${plmPageLayoutResources.LayoutFolder_newLayoutFolderProperties}" name="LayoutFolderPropertiesGroup" open="true">
                        <PropertyInputText name="identifier" promptText="${plmPageLayoutResources.LayoutFolder_name}" propertyName="identifier" required="true"/>
                        <PropertyInputMultiLineText promptText="${plmPageLayoutResources.LayoutFolder_description}" propertyName="description"/>
                        <ReferenceEditor promptText="${plmPageLayoutResources.LayoutFolder_parentFolder}" headerText="${plmPageLayoutResources.LayoutFolder_name}" helpText="${plmPageLayoutResources.LayoutFolder_parentFolder_helpText}" minWidth="460" name="parentFolderRefEditor" parentObjectTypes="LayoutFolder,InheritedLayoutFolder" referenceObjectTypes="LayoutFolderReference,InheritedLayoutFolderReference"/>
                  </PropertyGroup>                   
            </PropertyPane>
      </ObjectProperties>    
</Definitions>
