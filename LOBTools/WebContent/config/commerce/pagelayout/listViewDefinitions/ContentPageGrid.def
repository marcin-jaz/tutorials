<Definitions>
    	<!---
		This definition displays the contents and characteristics of a content page in utility pane
	-->
    <ObjectGrid definitionName="plmUtilityContentPageSearchGrid" preferenceKey="plmUtilityContentPageSearchGrid">
    	<GridText editable="false" name="pageId" propertyName="pageId" text="${plmPageLayoutResources.pageLayoutUniqueID_ColumnHeader}" visible="false" width="90"/>
		<GridIconTypeImage name="typeIcon" propertyName="null" required="true" text="${plmPageLayoutResources.pageType_ColumnHeader}" visible="true" width="60"/>
        <GridText editable="false" name="pageName" propertyName="name" text="${plmPageLayoutResources.contentPageName_ColumnHeader}" visible="true" width="90"/>
    </ObjectGrid>
    
    <!--- 
    	This definition displays the contents and characteristics of a list of
			{@link plmContentPage}    	
    		{@link plmInheritedContentPage}
     -->
    <ObjectGrid definitionName="plmContentPageGrid" preferenceKey="plmContentPageGrid">
    	<GridColumn editable="false" visible="false" name="id" text="${plmPageLayoutResources.contentPageUniqueID_ColumnHeader}" width="90">
			<GridTextCellDescriptor name="pageId" objectType="ContentPageAlias" propertyName="pageId"/>
			<GridTextCellDescriptor name="folderId" objectType="ContentPageFolderGroup" propertyName="folderId"/>
		</GridColumn>
    	<GridIconTypeImage name="typeIcon" propertyName="null" enableFilter="true" required="true" text="${plmPageLayoutResources.contentPageType_ColumnHeader}" visible="true" width="100"/>             
        <GridStoreName name="store" /> 
        <GridDisplayName name="contentPageName" text="${plmPageLayoutResources.contentPageName_ColumnHeader}" visible="true" width="200"/>
    </ObjectGrid>

	<ChildListEditor definitionName="plmContentPageChildList"
		listDefinitionName="plmContentPageGrid"
		objectTypes="ContentPage, InheritedContentPage"/>
		
	<NavigationListDefinition definitionName="plmContentPageList"
		displayName="${plmPageLayoutResources.navigation_contentPagePrompt}" isDefault="true"
		listDefinitionName="plmContentPageChildList" listTitle="${plmPageLayoutResources.contentPageList}"/>		

</Definitions>