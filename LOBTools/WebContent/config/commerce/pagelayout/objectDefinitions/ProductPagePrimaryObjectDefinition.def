<Definitions>

	<!--- This definition defines the base object from which ProductBrowsingPage and InheritedProductBrowsingPage are derived.
	-->
	<PrimaryObjectDefinition definitionName="plmBaseProductBrowsingPagePrimaryObjectDefinition"
		baseDefinitionName="plmBaseCatalogEntryBrowsingPagePrimaryObjectDefinition"
		isBaseDefinition="true"
		detailsViewHeaderText="${catalogResources.UtilityPaneHeaderText}"
		displayName="${plmPageLayoutResources.productPage_DisplayName}"
		helpLink="concepts/cpzpagecomptool.htm"> 
		
		<!--- 
			Retrieves the {@link plmChildCatalogEntryBrowsingPage}child objects.
		-->
		<GetChildrenService objectTypes="ChildCatalogEntryBrowsingPage"
			url="/cmc/GetProductSKUBrowsingPages">
			<ServiceParam name="storeId"/>
			<ServiceParam name="assetStoreId"/>
			<ServiceParam name="defaultLanguageId"/>
		</GetChildrenService>
		
		<!--- This navigation list definition is used to display the layout assignments for this catalog entry page. -->
		<NavigationListDefinition name="CatalogEntryBrowsingPageAssignmentChildList"
			displayName="${plmPageLayoutResources.navigation_layoutAssignmentListPrompt}"
		 	isDefault="true"
		 	listDefinitionName="plmPageLayoutReferenceList" 
		 	toolbarIcon="listToolbarIcon"
		 	listTitle="${plmPageLayoutResources.navigation_layoutAssignmentPrompt}" />	

		<!--- This navigation list definition is used to display the layout assignments for this catalog entry page as a calendar view. -->
		<NavigationListDefinition name="CatalogEntryBrowsingPageAssignmentGanttChildList"
			displayName="${plmPageLayoutResources.pageLayoutsGanttChartMenuTitle}"
		 	listDefinitionName="plmPageLayoutGanttReferenceList" 
		 	listTitle="${plmPageLayoutResources.pageLayoutsGanttChartTitle}"
		 	toolbarIcon="ganttChartToolbarIcon" />	
			
		<!--- This navigation list definition is used to display {@link plmChildCatalogEntryBrowsingPage} child objects. 
		-->
		<NavigationListDefinition name="CatalogEntryBrowsingPageChildList"
			displayName="${plmPageLayoutResources.skuPagesList}"
			listDefinitionName="plmCatalogEntryBrowsingPageChildList"
			listTitle="${plmPageLayoutResources.skuPagesList}"
			toolbarIcon="skuListToolbarIcon"
			helpLink="concepts/cpzpagecomptool.htm"/>
			
		<!---  
		    Reference object definition between the product page and a child ProductSKUBrowsingPage.
		    This indicates that a product page can be a parent of a ProductSKUBrowsingPage.
		-->
		<CollectionReferenceObjectDefinition baseDefinitionName="plmChildCatalogEntryBrowsingPage"/>

	</PrimaryObjectDefinition>
	

  	<!---		
		This definition represents the primary object definition describing a ProductBrowsingPage as a business object.
	-->	
	<PrimaryObjectDefinition definitionName="ProductBrowsingPage"
		baseDefinitionName="plmBaseProductBrowsingPagePrimaryObjectDefinition"
		objectType="ProductBrowsingPage"
		headerIcon="productPageHeaderIcon"
		icon="productPageIcon">	

	</PrimaryObjectDefinition>

  	<!---		
		This definition represents the primary object definition describing an InheritedProductBrowsingPage as a business object.
	-->	
	<PrimaryObjectDefinition definitionName="InheritedProductBrowsingPage"
		baseDefinitionName="plmBaseProductBrowsingPagePrimaryObjectDefinition"
		objectType="InheritedProductBrowsingPage"
		displayName="${plmPageLayoutResources.inheritedProductPage_DisplayName}"
		headerIcon="inheritedProductPageHeaderIcon" 
		icon="inheritedProductPageIcon">
	</PrimaryObjectDefinition>

</Definitions>