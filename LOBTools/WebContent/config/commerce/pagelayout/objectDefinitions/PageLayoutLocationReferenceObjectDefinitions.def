<Definitions>	
	<!--- 
		This definition defines the base object from which all layout location page references are derived. 
	-->
	<ReferenceObjectDefinition 
			definitionName="plmBaseLayoutLocationPageReference" 
			isBaseDefinition="true" 
			initializeObjectStoreId="true"
			objectGroups="LayoutLocationPageReferenceAlias" 
			idProperty="pageLocationId" 
			displayName="${plmPageLayoutResources.layoutPageLocationDisplayName}" 
			allowDuplicates="false">

		<!--- 
	        This property definition represents the options of whether or not propagate the layout to sub pages and what kind of sub pages.
	        For category page, the default value of this property is false.
	        For content page, this property should always be false. 
		-->
        <PropertyDefinition displayName="${plmPageLayoutResources.layoutPageLocationList_applyThisTo}" propertyName="applyToSubPage">
   
            <PropertyValue displayName="${plmPageLayoutResources.applyThisTo_thisPageOnly}" value="ThisPage"/>
            <PropertyValue displayName="${plmPageLayoutResources.applyThisTo_thisPageAndItsSubCategoryPages}" value="ThisPageAndSubCategory"/>
            <PropertyValue displayName="${plmPageLayoutResources.applyThisTo_subProductPages}" value="Product"/>
            <PropertyValue displayName="${plmPageLayoutResources.applyThisTo_subBunldePages}" value="Bundle"/>
            <PropertyValue displayName="${plmPageLayoutResources.applyThisTo_subKitPages}" value="Kit"/>
            <PropertyValue displayName="${plmPageLayoutResources.applyThisTo_subDynamicKitPages}" value="DynamicKit"/> 
            <PropertyValue displayName="${plmPageLayoutResources.applyThisTo_subPredDynaKitPages}" value="PredDynaKit"/>                
            <PropertyValue displayName="${plmPageLayoutResources.applyThisTo_subItemPages}" value="Item"/>               
            
         </PropertyDefinition>        

		<!-- 
			Default value for applyToSubPage is ThisPage.
		 -->
		<Xml name="template">
			<applyToSubPage>ThisPage</applyToSubPage>
		</Xml>

		<!-- 
			Create service to create a new layout location page reference.
		 -->
		<CreateService url="/cmc/CreateLayoutLocation">
			<ServiceParam name="storeId">
 				<EnablementOrCondition baseDefinitionName="plmLocalPageLayoutLocations"/>
			</ServiceParam>
			<ServiceParam name="objectStoreId" parameterName="storeId" parentProperty="true" propertyName="objectStoreId">
				<EnablementOrCondition baseDefinitionName="plmLocalPageLayoutLocations" negate="true"/>
			</ServiceParam>
			<ServiceParam name="pageLayoutId" parentProperty="true" propertyName="pageLayoutId" />
			<ServiceParam name="pageId" objectPath="PageAlias" propertyName="pageId" />
			<ServiceParam name="applyToSubPage" propertyName="applyToSubPage" />
			<ServiceParam name="pageGroup" objectPath="PageAlias" propertyName="pageGroup" />
			<ServiceParam name="deviceClass" parentProperty="true" propertyName="deviceClass"/>
		</CreateService>
		
		<!-- 
			Update service to update a existing layout location page reference.
		 -->
		<UpdateService url="/cmc/UpdateLayoutLocation">
			<ServiceParam name="storeId">
 				<EnablementOrCondition baseDefinitionName="plmLocalPageLayoutLocations"/>
			</ServiceParam>
			<ServiceParam name="objectStoreId" parameterName="storeId" parentProperty="true" propertyName="objectStoreId">
				<EnablementOrCondition baseDefinitionName="plmLocalPageLayoutLocations" negate="true"/>
			</ServiceParam>
			<ServiceParam name="pageLocationId" propertyName="pageLocationId" />
			<ServiceParam name="pageLayoutId" parentProperty="true" propertyName="pageLayoutId" />
			<ServiceParam name="applyToSubPage" propertyName="applyToSubPage" />
			<ServiceParam name="pageId" objectPath="PageAlias" propertyName="pageId" />
			<ServiceParam name="pageGroup" objectPath="PageAlias" propertyName="pageGroup" />
		</UpdateService>

		<!-- 
			Delete service to delete a layout location page reference.
		 -->
		<DeleteService url="/cmc/DeleteLayoutLocation">
			<ServiceParam name="storeId">
 				<EnablementOrCondition baseDefinitionName="plmLocalPageLayoutLocations"/>
			</ServiceParam>
			<ServiceParam name="objectStoreId" parameterName="storeId" parentProperty="true" propertyName="objectStoreId">
				<EnablementOrCondition baseDefinitionName="plmLocalPageLayoutLocations" negate="true"/>
			</ServiceParam>
			<ServiceParam name="pageLocationId" propertyName="pageLocationId" />
			<ServiceParam name="pageLayoutId" parentProperty="true" propertyName="pageLayoutId" />
		</DeleteService>
	</ReferenceObjectDefinition>

	<!-- 
		Enablement condition to check if it is a local page layout
	-->
	<EnablementOrCondition definitionName="plmLocalPageLayoutLocations" conditionId="localPageLayoutLocations">
		<EnablementCondition checkObjectDefinition="true" conditionId="LayoutLocationContentPageReferenceCondition" enablementValue="LayoutLocationContentPageReference" propertyName="objectType"/>
		<EnablementCondition checkObjectDefinition="true" conditionId="LayoutLocationInheritedContentPageReferenceCondition" enablementValue="LayoutLocationInheritedContentPageReference" propertyName="objectType"/>
		<EnablementCondition checkObjectDefinition="true" conditionId="LayoutLocationCatalogGroupPageReferenceCondition" enablementValue="LayoutLocationCatalogGroupPageReference" propertyName="objectType"/>
		<EnablementCondition checkObjectDefinition="true" conditionId="LayoutLocationInheritedCatalogGroupPageReferenceCondition" enablementValue="LayoutLocationInheritedCatalogGroupPageReference" propertyName="objectType"/>
		<EnablementCondition checkObjectDefinition="true" conditionId="LayoutLocationCatalogEntryPageReferenceCondition" enablementValue="LayoutLocationCatalogEntryPageReference" propertyName="objectType"/>
		<EnablementCondition checkObjectDefinition="true" conditionId="LayoutLocationInheritedCatalogEntryPageReferenceCondition" enablementValue="LayoutLocationInheritedCatalogEntryPageReference" propertyName="objectType"/>
	</EnablementOrCondition>

	<!-- 
		Local layout location page references to local content page
	 -->
	<ReferenceObjectDefinition 
			definitionName="plmLayoutLocationContentPageReference" 
			baseDefinitionName="plmBaseLayoutLocationPageReference" 
			objectType="LayoutLocationContentPageReference"
			objectGroups="LayoutLocationContentPageReferenceAlias,LayoutLocationPageReferenceAlias"
			referencedTypes="ContentPage">
		<TrueEnablementCondition/> 
	</ReferenceObjectDefinition>
	<!-- 
		Local layout location page references to inherited content page
	 -->
	<ReferenceObjectDefinition 
			definitionName="plmLayoutLocationInheritedContentPageReference" 
			baseDefinitionName="plmBaseLayoutLocationPageReference" 
			objectType="LayoutLocationInheritedContentPageReference"
			objectGroups="LayoutLocationContentPageReferenceAlias,LayoutLocationPageReferenceAlias"
			referencedTypes="InheritedContentPage"
			compatibleObjectTypes="InheritedLayoutLocationInheritedContentPageReference">
		<TrueEnablementCondition/> 
	</ReferenceObjectDefinition>
	<!-- 
		Inherited layout location page references to inherited content page
	 -->
	<ReferenceObjectDefinition 
			definitionName="plmInheritedLayoutLocationInheritedContentPageReference" 
			baseDefinitionName="plmBaseLayoutLocationPageReference" 
			objectType="InheritedLayoutLocationInheritedContentPageReference"
			objectGroups="LayoutLocationContentPageReferenceAlias,LayoutLocationPageReferenceAlias"
			referencedTypes="InheritedContentPage"
			allowCrossStoreReferences="false"
			compatibleObjectTypes="LayoutLocationInheritedContentPageReference">
		<EnablementCondition checkHasAccessRight="true" conditionId="accessRightCondition" enablementValue="true"/>			
	</ReferenceObjectDefinition>



	<!-- 
		Local layout location page references to local category page
	 -->
	<ReferenceObjectDefinition 
			definitionName="plmLayoutLocationCatalogGroupPageReference" 
			baseDefinitionName="plmBaseLayoutLocationPageReference" 
			objectType="LayoutLocationCatalogGroupPageReference"
			objectGroups="LayoutLocationCatalogGroupPageReferenceAlias,LayoutLocationPageReferenceAlias"
			referencedTypes="CatalogGroupBrowsingPage">
		<TrueEnablementCondition/> 
	</ReferenceObjectDefinition>
	<!-- 
		Local layout location page references to inherited category page
	 -->
	<ReferenceObjectDefinition 
			definitionName="plmLayoutLocationInheritedCatalogGroupPageReference" 
			baseDefinitionName="plmBaseLayoutLocationPageReference" 
			objectType="LayoutLocationInheritedCatalogGroupPageReference"
			objectGroups="LayoutLocationCatalogGroupPageReferenceAlias,LayoutLocationPageReferenceAlias"
			referencedTypes="InheritedCatalogGroupBrowsingPage"
			compatibleObjectTypes="InheritedLayoutLocationInheritedCatalogGroupPageReference">
		<TrueEnablementCondition/> 
	</ReferenceObjectDefinition>
	<!-- 
		Inherited layout location page references to inherited category page
	 -->
	<ReferenceObjectDefinition 
			definitionName="plmInheritedLayoutLocationInheritedCatalogGroupPageReference" 
			baseDefinitionName="plmBaseLayoutLocationPageReference" 
			objectType="InheritedLayoutLocationInheritedCatalogGroupPageReference"
			objectGroups="LayoutLocationCatalogGroupPageReferenceAlias,LayoutLocationPageReferenceAlias"
			referencedTypes="InheritedCatalogGroupBrowsingPage"
			compatibleObjectTypes="LayoutLocationInheritedCatalogGroupPageReference">
		<EnablementCondition checkHasAccessRight="true" conditionId="accessRightCondition" enablementValue="true"/>			
	</ReferenceObjectDefinition>


	
	<!-- 
		Local layout location page references to local catalog entry page
	 -->
	<ReferenceObjectDefinition 
			definitionName="plmLayoutLocationCatalogEntryPageReference" 
			baseDefinitionName="plmBaseLayoutLocationPageReference" 
			objectType="LayoutLocationCatalogEntryPageReference"
			objectGroups="LayoutLocationCatalogEntryPageReferenceAlias,LayoutLocationPageReferenceAlias"
			referencedTypes="ProductBrowsingPage,BundleBrowsingPage,KitBrowsingPage,DynamicKitBrowsingPage,PredDynaKitBrowsingPage,CatalogGroupSKUBrowsingPage,ProductSKUBrowsingPage">
		<TrueEnablementCondition/> 
	</ReferenceObjectDefinition>
	<!-- 
		Local layout location page references to inherited catalog entry page
	 -->
	<ReferenceObjectDefinition 
			definitionName="plmLayoutLocationInheritedCatalogEntryPageReference" 
			baseDefinitionName="plmBaseLayoutLocationPageReference" 
			objectType="LayoutLocationInheritedCatalogEntryPageReference"
			objectGroups="LayoutLocationCatalogEntryPageReferenceAlias,LayoutLocationPageReferenceAlias"
			referencedTypes="InheritedProductBrowsingPage,InheritedBundleBrowsingPage,InheritedKitBrowsingPage,InheritedDynamicKitBrowsingPage,InheritedPredDynaKitBrowsingPage,InheritedCatalogGroupSKUBrowsingPage,InheritedProductSKUBrowsingPage"
			compatibleObjectTypes="InheritedLayoutLocationInheritedCatalogEntryPageReference">
		<TrueEnablementCondition/> 
	</ReferenceObjectDefinition>
	<!-- 
		Inherited layout location page references to inherited catalog entry page
	 -->
	<ReferenceObjectDefinition 
			definitionName="plmInheritedLayoutLocationInheritedCatalogEntryPageReference" 
			baseDefinitionName="plmBaseLayoutLocationPageReference" 
			objectType="InheritedLayoutLocationInheritedCatalogEntryPageReference"
			objectGroups="LayoutLocationCatalogEntryPageReferenceAlias,LayoutLocationPageReferenceAlias"
			referencedTypes="InheritedProductBrowsingPage,InheritedBundleBrowsingPage,InheritedKitBrowsingPage,InheritedDynamicKitBrowsingPage,InheritedPredDynaKitBrowsingPage,InheritedCatalogGroupSKUBrowsingPage,InheritedProductSKUBrowsingPage"
			compatibleObjectTypes="LayoutLocationInheritedCatalogEntryPageReference">
		<EnablementCondition checkHasAccessRight="true" conditionId="accessRightCondition" enablementValue="true"/>			
	</ReferenceObjectDefinition>
	
</Definitions>
